@model List<KidKinder.Entities.Gallery>
@{
    ViewBag.Title = "Index";
    Layout = "~/Views/Shared/_KidKinderLayout.cshtml";
}

@Html.Action("GalleryHeaderPartial","Gallery")


<div class="container-fluid pt-5 pb-3">
    <div class="container">
        <div class="text-center pb-2">
            <p class="section-title px-5">
                <span class="px-2">Fotoğraflar</span>
            </p>
            <h1 class="mb-4">KidKinder Galeri</h1>
        </div>
        
        <div class="row portfolio-container">
            @foreach (var item in Model)
            {
            <div class="col-lg-4 col-md-6 mb-4 portfolio-item">
                <div class="position-relative overflow-hidden mb-20">
                 
                    <img class="img-fluid w-100" style="height:250px" src="@item.ImageUrl" alt="" />
                    <div class="portfolio-btn bg-primary d-flex align-items-center justify-content-center">
                       
                            <i class="fa fa-plus text-white" style="font-size: 60px"></i>
                       
                    </div>
                </div>
            </div>
            }
        </div>
    </div>
</div>