@model List<KidKinder.Entities.Service>


<div class="container-fluid pt-4">
    <div class="container pb-3">
        <div class="row">
            @foreach (var item in Model) {
            <div class="col-lg-4 col-md-6 pb-1" >
                <div class="d-flex bg-light shadow-sm border-top rounded mb-5" style="height:145px;padding: 20px">
                    <i class="@item.IconUrl"></i>
                    <div class="pl-4">
                        <h5>@item.Title</h5>
                        <p class="m-0" style="font-size:smaller">
                            @item.Description
                        </p>
                    </div>
                </div>
            </div>
            }

        </div>
    </div>
</div>

