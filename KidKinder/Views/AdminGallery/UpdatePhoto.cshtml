@model KidKinder.Entities.Gallery
@{
    ViewBag.Title = "UpdatePhoto";
    Layout = "~/Views/AdminLayout/Index.cshtml";
}


<div class="pcoded-inner-content">
    <div class="main-body">
        <div class="page-wrapper">
            <div class="page-body">
                <div class="row">
                    <div class="col-sm-12">
                        <div class="card">
                            <div class="card-header">
                                <h5>Fotoğraf Güncelle</h5>
                                <span> Fotoğraf verilerini eksiksiz olarak doldurunuz.</span>
                            </div>
                            <div class="card-block">

                                <form method="post">
                                    <div class="form-group row">

                                        <div class="col-sm-10">
                                            @Html.TextBoxFor(x => x.GalleryId, new { @class = "form-control", type="hidden" })
                                        </div>
                                    </div>
                                    <div class="form-group row">
                                        <label class="col-sm-2 col-form-label">Fotoğraf Başlığı</label>
                                        <div class="col-sm-10">
                                            @Html.TextBoxFor(x => x.Title, new { @class = "form-control" })
                                        </div>
                                    </div>
                                    <div class="form-group row">
                                        <label class="col-sm-2 col-form-label">Fotoğraf Url</label>
                                        <div class="col-sm-10">
                                            @Html.TextBoxFor(x => x.ImageUrl, new { @class = "form-control" })
                                        </div>
                                    </div>

                                    <button class="btn btn-primary rounded">Fotoğraf Güncelle</button>
                                </form>
                            </div>
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </div>
    <div id="styleSelector">

    </div>
</div>

