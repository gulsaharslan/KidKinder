@model List<KidKinder.Entities.Student>
@{
    ViewBag.Title = "Index";
    Layout = "~/Views/AdminLayout/Index.cshtml";
}



<!-- Page-header end -->
<div class="pcoded-inner-content">
    <!-- Main-body start -->
    <div class="main-body">
        <div class="page-wrapper">
            <!-- Page-body start -->
            <div class="page-body">
                <div class="card">
                    <div class="card-header">
                        <h5>Öğrenci Listesi Tablosu</h5>
                        <span>Öğrenciler ile ilgili işlemleri yapabileceğiniz alandır.</span>
                        <div class="card-header-right">
                            <ul class="list-unstyled card-option">
                                <li><i class="fa fa fa-wrench open-card-option"></i></li>
                                <li><i class="fa fa-window-maximize full-card"></i></li>
                                <li><i class="fa fa-minus minimize-card"></i></li>
                                <li><i class="fa fa-refresh reload-card"></i></li>
                                <li><i class="fa fa-trash close-card"></i></li>
                            </ul>
                        </div>
                    </div>
                    <div class="card-block table-border-style">
                        <div class="table-responsive">
                            <table class="table">
                                <thead>
                                    <tr>
                                        <th>#</th>
                                        <th>Ad Soyad</th>
                                        <th>Yaş</th>
                                        <th>Cinsiyet</th>
                                        <th>Sınıf</th>
                                        <th>İşlemler</th>

                                    </tr>
                                </thead>
                                <tbody>
                                    @foreach (var item in Model)
                                    {
                                        <tr>
                                            <td>@item.StudentId</td>
                                            <td>@item.NameSurname</td>
                                            <td>@item.Age</td>
                                            <td>@item.Gender</td>
                                            <td>@item.Classroom.Title</td>

                                            <td>
                                                <a href="/AdminStudent/DeleteStudent/@item.StudentId" class="btn btn-danger rounded">Sil</a>
                                                <a href="/AdminStudent/UpdateStudent/@item.StudentId" class="btn btn-success rounded">Güncelle</a>
                                            </td>
                                        </tr>
                                    }
                                </tbody>
                            </table>
                            <a href="/AdminStudent/CreateStudent/" class="btn btn-primary rounded">Yeni Öğrenci Girişi</a>
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </div>
</div>
