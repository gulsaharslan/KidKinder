@model KidKinder.Entities.Teacher
@{
    ViewBag.Title = "UpdateTeacher";
    Layout = "~/Views/AdminLayout/Index.cshtml";
}

<div class="pcoded-inner-content">
    <div class="main-body">
        <div class="page-wrapper">
            <div class="page-body">
                <div class="row">
                    <div class="col-sm-12">
                        <div class="card">
                            <div class="card-header">
                                <h5>Eğitmen Güncelle</h5>
                                <span> Eğitmen verilerini eksiksiz olarak doldurunuz.</span>
                            </div>
                            <div class="card-block">

                                <form method="post">
                                    <div class="form-group row">
                                        <label class="col-sm-2 col-form-label">Eğitmen ID</label>
                                        <div class="col-sm-10">
                                        @Html.TextBoxFor(x=>x.TeacherId, new {@class="form-control"})
                                        </div>
                                    </div>

                                    <div class="form-group row">
                                        <label class="col-sm-2 col-form-label">Eğitmen Adı Soyadı</label>
                                        <div class="col-sm-10">
                                            @Html.TextBoxFor(x => x.NameSurname, new { @class = "form-control" })
                                        </div>
                                    </div>
                                    <div class="form-group row">
                                        <label class="col-sm-2 col-form-label">Eğitmen Branşı</label>
                                        <div class="col-sm-10">
                                            @Html.DropDownListFor(x => x.BranchId, (List<SelectListItem>)ViewBag.v, new { @class = "form-control" })
                                        </div>
                                    </div>

                                    <div class="form-group row">
                                        <label class="col-sm-2 col-form-label">Eğitmen Görseli</label>
                                        <div class="col-sm-10">
                                            @Html.TextBoxFor(x => x.ImageUrl, new { @class = "form-control" })
                                        </div>
                                    </div>

                                    <button class="btn btn-primary rounded">Eğitmeni Güncelle</button>
                                </form>
                            </div>
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </div>
    <div id="styleSelector">

    </div>
</div>
