@model KidKinder.Entities.Teacher
@{
    ViewBag.Title = "CreateTeacher";
    Layout = "~/Views/AdminLayout/Index.cshtml";
}


<div class="pcoded-inner-content">
    <div class="main-body">
        <div class="page-wrapper">
            <div class="page-body">
                <div class="row">
                    <div class="col-sm-12">
                        <div class="card">
                            <div class="card-header">
                                <h5>Eğitmen Girişi</h5>
                                <span> Eğitmen verilerini eksiksiz olarak doldurunuz.</span>
                            </div>
                            <div class="card-block">

                                <form method="post">
                                    <div class="form-group row">
                                        <label class="col-sm-2 col-form-label">Eğitmen Adı Soyadı</label>
                                        <div class="col-sm-10">
                                            <input type="text" class="form-control" name="NameSurname">
                                        </div>
                                    </div>
                                    <div class="form-group row">
                                        <label class="col-sm-2 col-form-label">Eğitmen Branşı</label>
                                        <div class="col-sm-10">
                                           @Html.DropDownListFor(x=>x.BranchId, (List<SelectListItem>)ViewBag.v,"Branş Seçiniz", new {@class="form-control"})
                                        </div>
                                    </div>

                                    <div class="form-group row">
                                        <label class="col-sm-2 col-form-label">Eğitmen Görseli</label>
                                        <div class="col-sm-10">
                                            <input type="text" class="form-control" name="ImageUrl">
                                        </div>
                                    </div>

                                    <button class="btn btn-primary rounded">Eğitmeni Kaydet</button>
                                </form>
                            </div>
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </div>
    <div id="styleSelector">

    </div>
</div>

