@model KidKinder.Entities.Contact
@{
    Layout = "~/Views/Shared/_KidKinderLayout.cshtml";
}

@Html.Action("ContactHeaderPartial", "Contact")
    <div class="container-fluid pt-3">
        <div class="container">
            <div class="text-center pb-2"
                <p class="section-title-2 px-3">
                </p>
                <h1 class="mb-4">Sorularınız için bize ulaşın</h1>
            </div>
            <div class="row">
                <div class="col-lg-7 mb-5">
                    <div class="contact-form">
                        <div id="success"></div>
                        <form method="post" name="sentMessage"  action="/Contact/SaveMessage">
                            <div class="control-group">
                                @Html.TextBoxFor(x => x.NameSurname, new { @class = "form-control border-1 p-4", required = "required", placeholder = "Ad Soyad" })
                                <p class="help-block text-danger"></p>
                            </div>
                            <div class="control-group">
                                @Html.TextBoxFor(x => x.Email, new { @class = "form-control border-1 p-4", required = "required", placeholder = "Email" })
                                <p class="help-block text-danger"></p>
                            </div>
                            <div class="control-group">
                                @Html.TextBoxFor(x => x.Subject, new { @class = "form-control border-1 p-4", required = "required", placeholder = "Konu" })
                                <p class="help-block text-danger"></p>
                            </div>
                            <div class="control-group">
                               @Html.TextAreaFor(x => x.Message, new { @class = "form-control border-1 p-4", required = "required", placeholder = "Mesaj" })
                                <p class="help-block text-danger"></p>
                            </div>
                            <div>
                                <button class="btn btn-primary py-2 px-4"
                                        type="submit">
                                    Mesaj Gönder
                                </button>
                            </div>
                        </form>
                    </div>
                </div>
                <!-- Address -->
                @Html.Action("ContactAddressPartial", "Contact")

                <iframe src="https://www.google.com/maps/embed?pb=!1m18!1m12!1m3!1d12043.031382327521!2d28.76504225608636!3d41.00867308387929!2m3!1f0!2f0!3f0!3m2!1i1024!2i768!4f13.1!3m3!1m2!1s0x14caa3891b5c9713%3A0xb7f9717f39912ffe!2zS8O8w6fDvGvDp2VrbWVjZSwgS2FuYXJ5YSwgMzQyOTAgS8O8w6fDvGvDp2VrbWVjZS_EsHN0YW5idWw!5e0!3m2!1str!2str!4v1709301716355!5m2!1str!2str" width="100%" height="450" style="border:0;" allowfullscreen="" loading="lazy" referrerpolicy="no-referrer-when-downgrade"></iframe>
            </div>
        </div>
    </div>

